{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <div class="container mt-4 login">
            <p class="title-center">
                <a href="{{ path('registration') }}">Pas encore de compte? Inscription ici</a>
            </p>

        {% if error %}
            <div class="alert alert-danger">{{ error.message|trans({'Bad credentials': 'Login ou mot de passe incorrect'}) }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if compareUrl != 0 %} 
                <input type="hidden" name="_target_path" value="{{ referer }}"/>
            {% endif %}
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </div>

{% endblock %}